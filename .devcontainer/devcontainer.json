{
  "name": "Book API Dev",
  "build": { "dockerfile": "Dockerfile" },
  "features": {
    "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {},
    "ghcr.io/devcontainers/features/common-utils:2": {}
  },
  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
  "remoteUser": "vscode",
  "containerEnv": {
    "PGHOST": "host.docker.internal",
    "SSH_PUB_KEY": "${localEnv:SSH_PUB_KEY}"
  },

  "postCreateCommand": "bash -lc 'set -euo pipefail; cd ${containerWorkspaceFolder} && ( test -f .envrc || cp .envrc.example .envrc ) && direnv allow && direnv exec . task init'",
  "postStartCommand": "bash -lc 'cd ${containerWorkspaceFolder} && task db:up && task db:wait && task doctor && mkdir -p ~/.ssh && chmod 700 ~/.ssh && chmod 600 ~/.ssh/id_* 2>/dev/null || true && chmod 644 ~/.ssh/*.pub 2>/dev/null || true && chmod 644 ~/.ssh/known_hosts 2>/dev/null || true'",
  "forwardPorts": [8080, 5432],
  "customizations": {
    "vscode": {
      "extensions": [
        "golang.go",
        "ms-azuretools.vscode-docker",
        "foxundermoon.shell-format",
        "EditorConfig.EditorConfig",
        "mkhl.direnv"
      ],
      "settings": { "go.toolsManagement.autoUpdate": true }
    }
  },
  "hostRequirements": { "cpus": 2, "memory": "4gb" },
  "mounts": [
  "source=${env:HOME}/.ssh/id_ed25519,target=/home/vscode/.ssh/id_ed25519,type=bind,consistency=cached",
  "source=${env:HOME}/.ssh/id_ed25519.pub,target=/home/vscode/.ssh/id_ed25519.pub,type=bind,consistency=cached",
  "source=${env:HOME}/.ssh/known_hosts,target=/home/vscode/.ssh/known_hosts,type=bind,consistency=cached"
]
}
